<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherGame">

    <TextView
        android:id="@+id/gameLauncher_descript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/launchergame_descript"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/gameLauncher_button_game1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gameLauncher_button_game1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="sendAGameTapeLeClou"
        android:text="@string/gameLauncher_button_game1"
        app:layout_constraintBottom_toTopOf="@+id/gameLauncher_button_game2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameLauncher_descript" />

    <Button
        android:id="@+id/gameLauncher_button_game2"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="sendJoinTheCable"
        android:text="@string/gameLauncher_button_game2"
        app:layout_constraintBottom_toTopOf="@+id/gameLauncher_button_game3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameLauncher_button_game1" />

    <Button
        android:id="@+id/gameLauncher_button_game3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="sendJeuDuNiveau"
        android:text="@string/gameLauncher_button_game3"
        app:layout_constraintBottom_toTopOf="@+id/gameLauncher_button_game4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameLauncher_button_game2" />

    <Button
        android:id="@+id/gameLauncher_button_game4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="sendJeuDuHulk"
        android:text="@string/gameLauncher_button_game4"
        app:layout_constraintBottom_toTopOf="@+id/gameLauncher_button_game5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameLauncher_button_game3" />

    <Button
        android:id="@+id/gameLauncher_button_game5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="sendJeuMorse"
        android:text="@string/gameLauncher_button_game5"
        app:layout_constraintBottom_toTopOf="@+id/gameLauncher_button_game6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameLauncher_button_game4" />

    <Button
        android:id="@+id/gameLauncher_button_game6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameLauncher_button_game5" />
</android.support.constraint.ConstraintLayout>